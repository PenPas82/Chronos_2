            android:id="@+id/button_chauff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Dialog_Chauffeur"/>

        <RadioButton
            android:id="@+id/button_Scolaire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Dialog_Scolaire"/>

        <RadioButton
            android:id="@+id/button_enfant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Dialog_Enfant"/>
