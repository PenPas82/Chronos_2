<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="?android:attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:navigationIcon="@drawable/abc_btn_radio_material"/>

       <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_titre"
            android:background="@android:color/holo_blue_bright">

            <TextView
                android:layout_width="20.0dp"
                android:layout_height="@dimen/height_titre"
                android:text="@string/Titre_Id"/>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorcadre"/>

            <TextView
                android:layout_width="40.0dp"
                android:layout_height="match_parent"
                android:text="@string/Titre_Type"/>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorcadre"/>

            <TextView
                android:layout_width="50.0dp"
                android:layout_height="wrap_content"
                android:text="@string/Titre_Tour"/>
           <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorcadre"/>
        
            <TextView
                android:layout_width="130.0dp"
                android:layout_height="wrap_content"
                android:text="@string/Titre_Name"/>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorcadre"/>

            <TextView
                android:layout_width="60.0dp"
                android:layout_height="match_parent"
                android:text="@string/Titre_Latitude"/>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorcadre"/>

            <TextView
                android:layout_width="60.0dp"
                android:layout_height="match_parent"
                android:text="@string/Titre_Longitude"/>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorcadre"/>
        </LinearLayout> 


    <ListView
        android:id="@+id/listView_coordonnee"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:longClickable="true"
        />

</LinearLayout>
